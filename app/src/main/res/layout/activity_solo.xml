                tools:layout_editor_absoluteX="5dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/J5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:hint="@string/joueur_5"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/J4" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/J6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:hint="@string/joueur_6"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/J5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/J6Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/J1"
                tools:layout_editor_absoluteX="5dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/J7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:hint="@string/joueur_7"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/J6" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/J7Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
